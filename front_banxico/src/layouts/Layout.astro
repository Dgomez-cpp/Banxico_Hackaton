import Header from "../components/ui/Header.astro";
import Footer from "../components/ui/Footer.astro";
import ChatBubble from '../components/ui/ChatBubble.astro'; // 1. Importa el chat
const { title = "Front Banxico" } = Astro.props;
---
<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <main>
      <slot />
      <ChatBubble />
    </main>
    <Footer />
  </body>
</html>
