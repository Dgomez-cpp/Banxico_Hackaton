<div class="chat-bubble-container">
  <button id="chat-bubble-toggle" class="chat-bubble" aria-label="Abrir chat">
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
    </svg>
  </button>

  <div id="chat-window-popup" class="chat-window-popup" style="display: none;">
    <div class="chat-header">
      Asistente Banxico
      <button id="chat-close-btn" class="chat-close" aria-label="Cerrar chat">&times;</button>
    </div>
    <div id="chat-messages" class="chat-messages">
      <div class="message bot">Hola, soy tu asistente. ¿En qué te ayudo? (ej: "cuál es mi saldo")</div>
    </div>
    <form id="chat-form-popup" class="chat-form-popup">
      <input type="text" id="chat-input-popup" placeholder="Escribe tu mensaje..." autocomplete="off" />
      <button type="submit" aria-label="Enviar">
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="22" y1="2" x2="11" y2="13"></line><polygon points="22 2 15 22 11 13 2 9 22 2"></polygon></svg>
      </button>
    </form>
  </div>
</div>

<script>
  // Esta lógica se ejecuta en el cliente
  const toggleBtn = document.getElementById('chat-bubble-toggle');
  const chatWindow = document.getElementById('chat-window-popup');
  const closeBtn = document.getElementById('chat-close-btn');
  const chatForm = document.getElementById('chat-form-popup');
  const chatInput = document.getElementById('chat-input-popup') as HTMLInputElement;
  const chatMessages = document.getElementById('chat-messages');

  // Abrir y cerrar el chat
  toggleBtn.addEventListener('click', () => {
    chatWindow.style.display = 'flex';
    toggleBtn.style.display = 'none';
  });

  closeBtn.addEventListener('click', () => {
    chatWindow.style.display = 'none';
    toggleBtn.style.display = 'flex';
  });

  // Manejar el envío de mensajes
  chatForm.addEventListener('submit', async (e) => {
    e.preventDefault();
    const message = chatInput.value.trim();
    if (!message) return;

    addMessage(message, 'user');
    chatInput.value = '';

    // Llama al "puente" seguro de Astro
    try {
      const res = await fetch('/api/assist', { // ❗️ Llama al nuevo "puente"
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ message: message })
      });

      if (!res.ok) {
        // Maneja errores de sesión (ej. si el token expiró)
        if (res.status === 401) {
          addMessage('Tu sesión ha expirado. Por favor, inicia sesión de nuevo.', 'bot error');
          return;
        }
        throw new Error('Error del servidor');
      }

      const data = await res.json();
      addMessage(data.response, 'bot');

    } catch (err) {
      addMessage('Lo siento, no pude conectarme con el asistente.', 'bot error');
    }
  });

  function addMessage(text, sender) {
    const msgDiv = document.createElement('div');
    msgDiv.classList.add('message', sender);
    msgDiv.textContent = text;
    chatMessages.appendChild(msgDiv);
    // Auto-scroll
    chatMessages.scrollTop = chatMessages.scrollHeight;
  }
</script>

