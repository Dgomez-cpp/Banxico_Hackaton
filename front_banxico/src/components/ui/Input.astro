---
export interface Props {
  // 1. Sé específico con los tipos de input que permitirás
  type?: 
    | 'text' 
    | 'email' 
    | 'password' 
    | 'number' 
    | 'date' 
    | 'tel'
    | 'url'
    | 'search';
  name?: string;
  placeholder?: string;
  value?: string;
}

const {
  type = "text",
  name = "",
  placeholder = "",
  value = "",
} = Astro.props; // 2. El "as Props" no es necesario
---

<input 
  type={type}
  name={name}
  placeholder={placeholder}
  value={value}
  class="input"
/>

<style>
  /* Estilo basado en Uiverse.io */
  .input {
    width: 90%;
    border: none;
    outline: none;
    border-radius: 15px;
    padding: 1em;
    background-color: #ccc;
    box-shadow: inset 2px 5px 10px rgba(0,0,0,0.3);
    transition: 300ms ease-in-out;
    font-size: 1rem;
  }

  .input:focus {
    background-color: white;
    transform: scale(1);
    box-shadow: 13px 13px 100px #969696,
                -13px -13px 100px #ffffff;
  }
</style>